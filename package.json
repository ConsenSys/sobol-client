{
  "name": "tmnt-client",
  "version": "0.0.1",
  "description": "Provides a JavaScript client to TMNT's API.",
  "main": "dist/node/client.js",
  "repository": "git@github.com:ProjectPeter/tmnt-client.git",
  "author": "TMNT",
  "license": "MIT",
  "scripts": {
    "start-node": "cross-env NODE_ENV=development nodemon --watch src --watch tests --exec babel-node tests/node.js",
    "start-browser": "cross-env NODE_ENV=development webpack-dev-server --progress --open --mode development --config webpack.config.js",
    "build": "npm run build-browser && npm run build-node",
    "build-node": "cross-env NODE_ENV=production npx babel src --out-dir dist/node/ --inline-source-maps",
    "build-browser": "cross-env NODE_ENV=production webpack -p --progress --mode production --config webpack.config.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "jsonwebtoken": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "7.0.0-beta.55",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "nodemon": "^1.18.4",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist"
    }
  }
}
